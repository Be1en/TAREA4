<div class="m-10 px-12 flex">
  <h1 class="text-3xl font-semibold text-gray-800">Productos</h1>
  <a
    href="/crear_productos"
    class="bg-indigo-200 font-semibold hover:bg-indigo-100 py-2 px-2 ml-10 rounded-full"
  ><svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="w-6 h-6 text-white"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M12 4.5v15m7.5-7.5h-15"
      />
    </svg>

  </a>

</div>

<div class="relative overflow-x-auto ml-20 mr-20 sm:rounded-lg">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400  ">
        <thead class="text-xs text-white uppercase bg-indigo-300">
            <tr>
                <th scope="col" class="px-6 py-3">
                    ID
                </th>
                <th scope="col" class="px-6 py-3">
                    Producto
                </th>
                <th scope="col" class="px-6 py-3">
                    Precio
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    {{id}}
                </th>
                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    {{producto}}
                </th>
                <td class="px-6 py-4">
                    {{precio}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>