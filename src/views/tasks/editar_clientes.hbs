<div class="m-10 px-12 mx-auto">
  <h1 class="text-3xl font-semibold text-gray-800">Editar Cliente</h1>
  {{#each clientes}}
  <form action="" method="POST" class="mt-10 w-full">
    
    <label for="nombre_cliente" class="block mb-3 text-xs text-gray-700 uppercase">Nombre del Cliente</label>
    <input
      type="text"
      id="nombre_cliente"
      class="border border-gray-200 rounded-md bg-white border-indigo-100 border-6 text-lg placeholder-gray-300 p-2 mb-5 focus:outline-none w-3/6"
      placeholder="Ingrese el nombre del cliente"
      name="nombre" value="{{nombre}}"
      required
    />

    <label for="correo_cliente" class="block mb-3 block mb-3 text-xs text-gray-700 uppercase">Correo del Cliente</label>
    <input
      type="email"
      id="correo_cliente"
      class="border border-gray-200 rounded-md bg-white border-indigo-100 border-6 text-lg placeholder-gray-300 p-2 mb-5 focus:outline-none w-3/6"
      placeholder="Ingrese el correo, correo@email.com"
      name="correo" value="{{correo}}"
      required
    />
    <label for="tel_cliente" class="block mb-3 block mb-3 text-xs text-gray-700 uppercase">Tel√©fono del Cliente</label>
    <input
      type="number"
      id="tel_cliente"
      class="border border-gray-200 rounded-md bg-white border-indigo-100 border-6 text-lg placeholder-gray-300 p-2 mb-5 focus:outline-none w-3/6"
      placeholder="Ingrese el telefono del cliente"
      name="tel" value="{{tel}}"
      required 
    />

    <button
      type="submit"
      class="w-3/6 bg-indigo-200 hover:bg-indigo-300 fon-semibold py-3 px-4 rounded-md"
    >Editar</button>
  </form>
  {{/each}}

</div>